<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <PreserveCompilationContext>false</PreserveCompilationContext>
    <EnableDefaultContentItems>false</EnableDefaultContentItems>
    <OutputType>Library</OutputType>
    <WindowsAzurePackageVersion>9.0.0</WindowsAzurePackageVersion>
  </PropertyGroup>

  <ItemGroup>
    <Content CopyToOutputDirectory="PreserveNewest" Include="$(NuGetPackageRoot)WindowsAzure.Storage\$(WindowsAzurePackageVersion)\lib\netstandard1.3\*.dll" />
    <PackageReference Include="WindowsAzure.Storage" Version="$(WindowsAzurePackageVersion)" />
    <ProjectReference Include="..\..\SimplCommerce.Infrastructure\SimplCommerce.Infrastructure.csproj" />
    <ProjectReference Include="..\SimplCommerce.Module.Core\SimplCommerce.Module.Core.csproj" />
  </ItemGroup>

</Project>
